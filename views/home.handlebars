<div class="container-fluid ">
    {{#each articles}}
    <div class="card my-3" data-id="{{_id}}">
        <div class="row no-gutters">
            <div class="col-md-3">

            </div>
            <div class="col-md-9">
                <div class="card-body">
                    <h5><a class="card-title" target="_blank" href="{{link}}">{{title}}</a></h5>
                    <p class="card-text">{{detail}}</p>
                    <button data-id="{{_id}}" yyclass="btn btn-success btn-save">Save Article</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>